<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_gray"
	android:layout_marginBottom="10dp">
            
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="fill_parent"
	    android:orientation="horizontal" >
	
	    <LinearLayout
	        android:id="@+id/trash"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:orientation="vertical"
	        android:layout_margin="5dp"
	        android:layout_gravity="center_vertical"
	        android:background="@drawable/trash" >        
		</LinearLayout>
		
	    <LinearLayout
	        android:id="@+id/ledSource"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:orientation="vertical"
	        android:layout_margin="5dp"
	        android:layout_gravity="center_vertical"
	        android:background="@drawable/target" >        
	    
		    <ImageView
		        android:id="@+id/led"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:src="@drawable/led_on"
		        android:padding="5dp" />
		    
		</LinearLayout>
		
	    <LinearLayout
	        android:id="@+id/potSource"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:orientation="vertical"
	        android:layout_margin="5dp"
	        android:layout_gravity="center_vertical"
	        android:background="@drawable/target" >        
	    
		    <ImageView
		        android:id="@+id/pot"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:src="@drawable/pot"
		        android:padding="5dp" />
		    
		</LinearLayout>
		
	    <LinearLayout
	        android:id="@+id/buttonSource"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:orientation="vertical"
	        android:layout_margin="5dp"
	        android:layout_gravity="center_vertical"
	        android:background="@drawable/target" >        
	    
		    <ImageView
		        android:id="@+id/button"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:src="@drawable/button"
		        android:padding="5dp" />
		    
		</LinearLayout>
		
	    <LinearLayout
	        android:id="@+id/spstSource"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:orientation="vertical"
	        android:layout_margin="5dp"
	        android:layout_gravity="center_vertical"
	        android:background="@drawable/target" >        
	    
		    <ImageView
		        android:id="@+id/spst"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:src="@drawable/spst"
		        android:padding="5dp" />
		    
		</LinearLayout>
		
	    <LinearLayout
	        android:id="@+id/photoSource"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:orientation="vertical"
	        android:layout_margin="5dp"
	        android:layout_gravity="center_vertical"
	        android:background="@drawable/target" >        
	    
		    <ImageView
		        android:id="@+id/photo"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:src="@drawable/photo"
		        android:padding="5dp" />
		    
		</LinearLayout>
		
	    <LinearLayout
	        android:id="@+id/servoSource"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:orientation="vertical"
	        android:layout_margin="5dp"
	        android:layout_gravity="center_vertical"
	        android:background="@drawable/target" >        
	    
		    <ImageView
		        android:id="@+id/servo"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:src="@drawable/servo"
		        android:padding="5dp" />
		    
		</LinearLayout>
	    
	</LinearLayout>

</HorizontalScrollView>
